<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="343dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:text="© 2018 Department of Mathematics, Uttaradit School"
        app:fontFamily="@font/kanit_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="พื้นที่ผิว"
        android:textSize="33sp"
        app:fontFamily="@font/kanit_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_area_circle"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fivee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_area_cone" />

    <Button
        android:id="@+id/button_area_cone"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fourr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_area_cylinder" />

    <Button
        android:id="@+id/button_area_cylinder"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/threee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_area_pyramid" />

    <Button
        android:id="@+id/button_area_pyramid"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/twoo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_area_prism" />

    <Button
        android:id="@+id/button_area_prism"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/onee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</android.support.constraint.ConstraintLayout>