<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="343dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:text="© 2018 Department of Mathematics, Uttaradit School"
        app:fontFamily="@font/kanit_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:text="ปริมาตร"
        android:textAllCaps="true"
        android:textSize="33sp"
        app:fontFamily="@font/kanit_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_vol_pyramid"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/twooo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_vol_prism" />

    <Button
        android:id="@+id/button_vol_prism"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/oneee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button_vol_cylinder"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/threee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_vol_pyramid" />

    <Button
        android:id="@+id/button_vol_cone"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fourrr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_vol_cylinder" />

    <Button
        android:id="@+id/button_vol_circle"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fivee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_vol_cone" />
</android.support.constraint.ConstraintLayout>